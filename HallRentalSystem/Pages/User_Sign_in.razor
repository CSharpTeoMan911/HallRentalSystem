@using System.Text;
@using Controllers;
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage;
@using HallRentalSystem.Components;
@using HallRentalSystem.Classes.StructuralAndBehavioralElements;
@inject IJSRuntime JS
@inject NavigationManager Navigation_Manager;
@inject ProtectedLocalStorage LocalStorage;
@page "/sign-in"

<PageTitle>Sign in</PageTitle>


<div class="index_page_skeleton" style="text-align:center;">

    <h1 class="handwritten_page_title">Sign in </h1>
    
    <Sign_in_Component></Sign_in_Component>
</div>



@code{
    protected override async void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);

        if (await Shared_Data.auth_manager.Get<bool>(LocalStorage) == true)
            StateHasChanged();
    }
}