<div class="authpanel_div">
    <h2 class="authpanel_header">
        @label
    </h2>

    @if (IsPassword == true)
    {
        <input id="@InputId" class="auth_input" type="password" placeholder="@placeholder" />
    }
    else
    {
        <input id="@InputId" class="auth_input" placeholder="@placeholder" />
    }

</div>

@code {
    [Parameter]
    public string? label { get; set; }

    [Parameter]
    public string? placeholder { get; set; }

    [Parameter]
    public bool IsPassword { get; set; }

    [Parameter]
    public string? InputId { get; set; }
}
